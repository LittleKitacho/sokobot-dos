    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Bot",
            "cwd": "${workspaceFolder}",
            "program": "start.js",
            "args": ["--no-emit"],
            "preLaunchTask": "build and lint",
            "outputCapture": "std",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true
        }
    ]
}